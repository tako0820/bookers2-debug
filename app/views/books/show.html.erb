<div class='container'>
  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>

          <td>
          <% if @book.favorited?(current_user) %>
          <%= link_to book_favorites_path(@book.id), method: :delete do %>
            <span style="color:red;">♡︎</span> <%= @favorite_count %>
           <% end %>
          <% else %>
            <%= link_to book_favorites_path(@book.id), method: :post do %>
             <span>︎♡</span> <%= @favorite_count %>
            <% end %>
          <% end %>
          </td>

          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>
          </td>

          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>

        <tr>
          <% @book.book_comments.each do |book_comment| %>
           <td><%= image_tag book_comment.user.get_profile_image, size: "100x100" %></td>
           <td><%= book_comment.comment %></td>
           <td>
             <% if book_comment.user == current_user %>
               <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
             <% end %>
           </td>

          <% end %>
        </tr>
      </table>

      <div>
       <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment %>
        <%= f.submit "送信する" %>
       <% end %>
      </div>


    </div>
  </div>
</div>